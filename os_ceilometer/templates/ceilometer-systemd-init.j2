# {{ ansible_managed }}

[Unit]
Description=ceilometer openstack service
After=syslog.target
After=network.target

[Service]
Type=simple
User={{ system_user }}
Group={{ system_group }}

{% if program_override is defined %}
ExecStart={{ program_override }} {{ program_config_options|default('') }} --log-file=/var/log/ceilometer/{{ program_name }}.log
{% else %}
ExecStart={{ ceilometer_bin }}/{{ program_name }} {{ program_config_options|default('') }} --log-file=/var/log/ceilometer/{{ program_name }}.log
{% endif %}

# Give a reasonable amount of time for the server to start up/shut down
TimeoutSec=300
Restart=on-failure
RestartSec=150

[Install]
WantedBy=multi-user.target
